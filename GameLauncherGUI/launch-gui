#!/bin/bash

# Matthew Smith Games GUI Launcher Startup Script

LAUNCHER_DIR="$(dirname "$(readlink -f "$0")")"
LAUNCHER_BINARY="$LAUNCHER_DIR/game-launcher-gui"

echo "üéÆ Matthew Smith Game Launcher"
echo "=============================="

if [ -x "$LAUNCHER_BINARY" ]; then
    echo "Starting GUI launcher..."
    exec "$LAUNCHER_BINARY" "$@"
else
    echo "‚ùå GUI launcher not found or not executable!"
    echo "Expected: $LAUNCHER_BINARY"
    echo ""
    echo "Please build the launcher first:"
    echo "  cd '$LAUNCHER_DIR'"
    echo "  make"
    echo ""
    echo "Check GTK4 installation:"
    echo "  make check-deps"
    exit 1
fi
